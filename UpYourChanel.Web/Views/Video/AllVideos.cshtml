@using UpYourChannel.Web.ViewModels.Video
@model AllVideosViewModel

<br />
<br />
<br />
<br />

<head>
    <link rel="stylesheet" href="~/css/d.css" />
</head>
<div class="container  text-center ">
    <div class="row">
        <div class="col-sm-4 text-center">
            <div class="text-center bottom-align-text">
                <h2>Feel free to add your video:</h2>
            </div>
        </div>
        <div class="col-sm-4 text-center">
            <div class="text-center">
                <h1 class="display-4">All Videos</h1>
            </div>
        </div>
    </div>
</div>
<br />

@if ((string)TempData["SuccessOnAddVideo"] == "Thanks for adding your video.")
{
    <div class="container">
        <div class="text-center alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>@TempData["SuccessOnAddVideo"] We will see it under 1 hour.</strong>
        </div>
    </div>
    @*<script>alert("@TempData["SuccessOnAddVideo"]");</script>*@
}
<div class="container text-center">
    <div class="row">
        <div class="col-sm-4 text-center">
            <a asp-controller="Video" asp-action="AddVideo" class="btn btn-primary btn-lg" role="button" aria-pressed="true">Add your Video</a>
        </div>

        <form asp-controller="Video" asp-action="AllVideos" method="get" class="col-md-4 @*form-inline d-flex*@ text-center form-group has-search">
            <span class="fa fa-search form-control-feedback"></span>
            <input name="search" class="form-control" type="text" placeholder="Search"
                   aria-label="Search">
        </form>
    </div>
</div>
<br />

<div class="container">
    <div class="row">
        @foreach (var video in Model.AllVideos)
        {
            <div class="col-sm-4">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src=@video.IFrameSource allowfullscreen></iframe>
                </div>
                <label text-justify text-dark">@video.Title</label>
            </div>
        }
    </div>
</div>
<br />
